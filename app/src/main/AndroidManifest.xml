<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.photos38">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Photos38">
        <activity
            android:name=".DoubleSearch"
            android:label="@string/title_activity_double_search"
            android:theme="@style/Theme.Photos38.NoActionBar"></activity>
        <activity
            android:name=".SingleSearch"
            android:label="@string/title_activity_single_search"
            android:theme="@style/Theme.Photos38.NoActionBar" />
        <activity
            android:name=".ChooseAlbum"
            android:label="@string/title_activity_choose_album"
            android:theme="@style/Theme.Photos38.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.photos38.ImageDashboard" />
        </activity>
        <activity
            android:name=".ImageDisplay"
            android:label="@string/title_activity_image_display"
            android:theme="@style/Theme.Photos38.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.photos38.ImageDashboard" />
        </activity>
        <activity
            android:name=".ImageDashboard"
            android:label="@string/title_activity_image_dashboard"
            android:theme="@style/Theme.Photos38.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.photos38.Home" />
        </activity>
        <activity
            android:name=".AddAlbum"
            android:label="@string/title_activity_add_album"
            android:theme="@style/Theme.Photos38.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.photos38.Home" />
        </activity>
        <activity
            android:name=".AlbumOptions"
            android:label="@string/title_activity_album_options"
            android:theme="@style/Theme.Photos38.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.photos38.Home" />
        </activity>
        <activity android:name=".Home">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>